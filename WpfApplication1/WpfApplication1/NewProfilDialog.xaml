<Window x:Class="WpfApplication1.NewProfilDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neues Profil" Height="130" Width="300" Closing="Window_Closing">
    <Grid>
        <Label Content="Profilname" HorizontalAlignment="Left" Margin="26,16,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtProfileName" HorizontalAlignment="Left" Height="23" Margin="150,20,0,0" TextWrapping="Wrap" Text="Profilename" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="33,56,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="150,56,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>

    </Grid>
</Window>
