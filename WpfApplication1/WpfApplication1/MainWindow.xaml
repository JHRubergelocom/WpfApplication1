<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="443" Width="500">
    <Grid>
        <Button x:Name="btnLoadEloScripte" Content="ELO Scripte herunterladen" HorizontalAlignment="Left" Margin="6,341,0,0" VerticalAlignment="Top" Width="180" Click="btnLoadEloScripte_Click"/>
        <Button x:Name="btnGenerateOneNotePages" Content="OneNote Seiten erzeugen" HorizontalAlignment="Left" Margin="6,375,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="Profil" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="66"/>
        <ComboBox x:Name="cboProfile" HorizontalAlignment="Left" Margin="20,48,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboProfile_SelectionChanged"/>
        <Button x:Name="btnNewProfile" Content="Neue Konfiguration" HorizontalAlignment="Left" Margin="200,48,0,0" VerticalAlignment="Top" Width="260" Click="btnNewProfile_Click"/>
        <Label Content="arcPath" HorizontalAlignment="Left" Margin="22,208,0,0" VerticalAlignment="Top"/>
        <Label Content="ixUrl" HorizontalAlignment="Left" Margin="22,178,0,0" VerticalAlignment="Top"/>
        <Label Content="user" HorizontalAlignment="Left" Margin="22,106,0,0" VerticalAlignment="Top"/>
        <Label Content="pwd" HorizontalAlignment="Left" Margin="22,144,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="23" Margin="200,106,0,0" TextWrapping="Wrap" Text="user" VerticalAlignment="Top" Width="260"/>
        <PasswordBox x:Name="txtPwd" HorizontalAlignment="Left" Height="23" Margin="200,144,0,0" VerticalAlignment="Top" Width="260" PasswordChar="*" MaxLength="8"/>
        <TextBox x:Name="txtIxUrl" HorizontalAlignment="Left" Height="23" Margin="200,178,0,0" TextWrapping="Wrap" Text="ixUrl" VerticalAlignment="Top" Width="260"/>
        <TextBox x:Name="txtArcPath" HorizontalAlignment="Left" Height="23" Margin="200,208,0,0" TextWrapping="Wrap" Text="arcPath" VerticalAlignment="Top" Width="260"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="9" Margin="7,316,0,0" Stroke="Black" VerticalAlignment="Top" Width="472"/>
        <Button x:Name="btnSaveProfile" Content="Speichern" HorizontalAlignment="Left" Margin="201,285,0,0" VerticalAlignment="Top" Width="113" Click="btnSaveProfile_Click"/>
        <Button x:Name="btnDeleteProfile" Content="Löschen" HorizontalAlignment="Left" Margin="345,285,0,0" VerticalAlignment="Top" Width="113" Click="btnDeleteProfile_Click"/>
        <CheckBox x:Name="chkExportReferences" Content="Referenzen exportieren" HorizontalAlignment="Left" Margin="236,345,0,0" VerticalAlignment="Top" Width="199"/>
        <GroupBox x:Name="grpIxConfiguration" Header="IX Konfiguration" HorizontalAlignment="Left" Height="188" Margin="5,84,0,0" VerticalAlignment="Top" Width="473" BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" ClipToBounds="True"/>
    </Grid>
</Window>
