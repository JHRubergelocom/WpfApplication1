<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <Button x:Name="btnLoadEloScripte" Content="ELO Scripte herunterladen" HorizontalAlignment="Left" Margin="20,275,0,0" VerticalAlignment="Top" Width="180" Click="btnLoadEloScripte_Click"/>
        <Button x:Name="btnGenerateOneNotePages" Content="OneNote Seiten erzeugen" HorizontalAlignment="Left" Margin="21,309,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="Profil" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="66"/>
        <ComboBox x:Name="cboProfile" HorizontalAlignment="Left" Margin="20,48,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboProfile_SelectionChanged"/>
        <Button x:Name="btnNewProfile" Content="Neue Konfiguration" HorizontalAlignment="Left" Margin="200,48,0,0" VerticalAlignment="Top" Width="260" Click="btnNewProfile_Click"/>
        <Label Content="arcPath" HorizontalAlignment="Left" Margin="20,185,0,0" VerticalAlignment="Top"/>
        <Label Content="ixUrl" HorizontalAlignment="Left" Margin="20,156,0,0" VerticalAlignment="Top"/>
        <Label Content="user" HorizontalAlignment="Left" Margin="20,81,0,0" VerticalAlignment="Top"/>
        <Label Content="pwd" HorizontalAlignment="Left" Margin="20,119,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="23" Margin="200,88,0,0" TextWrapping="Wrap" Text="user" VerticalAlignment="Top" Width="260"/>
        <TextBox x:Name="txtPwd" HorizontalAlignment="Left" Height="23" Margin="200,126,0,0" TextWrapping="Wrap" Text="pwd" VerticalAlignment="Top" Width="260"/>
        <TextBox x:Name="txtIxUrl" HorizontalAlignment="Left" Height="23" Margin="200,160,0,0" TextWrapping="Wrap" Text="ixUrl" VerticalAlignment="Top" Width="260"/>
        <TextBox x:Name="txtArcPath" HorizontalAlignment="Left" Height="23" Margin="200,190,0,0" TextWrapping="Wrap" Text="arcPath" VerticalAlignment="Top" Width="260"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="9" Margin="20,250,0,0" Stroke="Black" VerticalAlignment="Top" Width="441"/>
        <Button x:Name="btnSaveProfile" Content="Speichern" HorizontalAlignment="Left" Margin="201,219,0,0" VerticalAlignment="Top" Width="113" Click="btnSaveProfile_Click"/>
        <Button x:Name="btnDeleteProfile" Content="Löschen" HorizontalAlignment="Left" Margin="345,219,0,0" VerticalAlignment="Top" Width="113" Click="btnDeleteProfile_Click"/>
        <CheckBox x:Name="chkExportReferences" Content="Referenzen exportieren" HorizontalAlignment="Left" Margin="236,279,0,0" VerticalAlignment="Top" Width="199"/>
    </Grid>
</Window>
